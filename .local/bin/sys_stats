#!/usr/bin/env bash

CPUTemp="$(sensors | awk '/^Package id 0:/ {print $4}' | sed 's/^.//')"
RAM="$(free -h | awk '/^Mem:/ {print $3 "/" $2}')"
DISK="$(df -h | awk '/^\/dev\/nvme0n1p2/ {print $3 "/" $2}')"

notify-send -t 8000 "$(
printf "ğŸ’½ KRNL: $(uname -r)\n"
top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print "ğŸ§  CPU: "100 - $1"%"}'
printf "ğŸŒ¡ï¸ CPU: $CPUTemp\n"
printf "ğŸ RAM: $RAM\n"
printf "ğŸ“¦ SSD: $DISK\n"
)"
